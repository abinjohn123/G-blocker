{
  "manifest_version": 3,
  "name": "Gaayamma Blocker",
  "version": "1.0",
  "description": "Block entertainment sites during study mode",
  "permissions": ["tabs", "storage", "activeTab"],
  "host_permissions": [
    "https://*.instagram.com/*",
    "https://*.linkedin.com/*",
    "https://*.facebook.com/*",
    "https://*.twitter.com/*",
    "https://*.x.com/*",
    "https://*.reddit.com/*",
    "https://*.pinterest.com/*",
    "https://*.myntra.com/*",
    "https://*.nykaa.com/*",
    "https://*.manifoldkerala.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Gaayamma Blocker"
  }
}
