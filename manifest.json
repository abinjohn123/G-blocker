{
  "manifest_version": 3,
  "name": "Gaayamma Blocker",
  "version": "1.0",
  "description": "Block entertainment sites during study mode",
  "permissions": ["tabs", "storage", "activeTab"],
  "host_permissions": [
    "https://www.instagram.com/*",
    "https://instagram.com/*",
    "https://www.linkedin.com/*",
    "https://linkedin.com/*",
    "https://www.facebook.com/*",
    "https://facebook.com/*",
    "https://www.twitter.com/*",
    "https://twitter.com/*",
    "https://www.x.com/*",
    "https://x.com/*",
    "https://www.tiktok.com/*",
    "https://tiktok.com/*",
    "https://www.reddit.com/*",
    "https://reddit.com/*",
    "https://www.snapchat.com/*",
    "https://snapchat.com/*",
    "https://www.pinterest.com/*",
    "https://pinterest.com/*",
    "https://www.twitch.tv/*",
    "https://twitch.tv/*",
    "https://www.discord.com/*",
    "https://discord.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Gaayamma Blocker"
  }
}
